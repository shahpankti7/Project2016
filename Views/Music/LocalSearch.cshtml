    <div class="fb-like" data-href="https://www.facebook.com/musicstoreproject2016" data-width="50" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>

</body>

</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}